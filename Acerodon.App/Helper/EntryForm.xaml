<Window x:Class="Acerodon.App.Helper.EntryForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EntryForm" Height="200" Width="400">
    <Grid x:Name="LayoutGrid">
        <Button x:Name="btnSave" Content="Save" Margin="0,0,90,10" IsDefault="True" HorizontalAlignment="Right" Width="75" Height="20" VerticalAlignment="Bottom" Click="btnSave_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" Margin="0,0,10,10" IsCancel="True" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75"/>
    </Grid>
</Window>
